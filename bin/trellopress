#!/usr/bin/env ruby
# frozen_string_literal: true

# require "bundler/setup"
require "TrelloPress"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# require "irb"
# IRB.start(__FILE__)

if ARGV.empty?
  puts TrelloPress.check_jekyll
  exit
end

if ARGV.include?("--workflow") || ARGV.include?("-w")
  TrelloPress.generate_workflows
  exit
end

if ARGV.include?("--plugin") || ARGV.include?("-p")
  TrelloPress.generate_plugin
  exit
end
